<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9c1f5"
    android:orientation="vertical"
    tools:context=".Fragments.Login">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#f7f3f3"
        app:cardBackgroundColor="#cef7f9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@drawable/layer" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bgstyle"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:hint="UserName"
                android:padding="5dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bgstyle"

                android:drawableLeft="@drawable/ic_action_name"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="5dip" />


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageButton
        android:id="@+id/loginform"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/round"
        android:src="@drawable/ic_arrow_forward_black_24dp"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dont have an account"
        android:textColor="#f7f3f3"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="100dp"
        android:text="Register Here"
        android:textColor="#45c18b"
        android:textColorLink="#191ba4"
        android:textSize="20dp" />
</LinearLayout>